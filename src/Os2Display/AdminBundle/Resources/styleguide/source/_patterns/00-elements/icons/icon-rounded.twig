{% if data.color == "gray" %}
  {% set iconRoundedColor = " is-color-gray" %}
{%  endif %}

{% if data.size == "small" %}
  {% set iconRoundedSize = " md-18" %}
{%  endif %}

{% if data.size == "normal" %}
  {% set iconRoundedSize = " md-24" %}
{%  endif %}

{% if data.size == "medium" %}
  {% set iconRoundedSize = " md-36" %}
{%  endif %}

{% if data.size == "large" %}
  {% set iconRoundedSize = " md-48" %}
{%  endif %}

<i class="icon-rounded material-icons{{ iconRoundedSize }}{{ iconRoundedColor }}">{{ data.icon }}</i>
